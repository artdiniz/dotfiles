###############################################################################
#                                                                             #
#                      SYSTEM LEVEL GLOBAL STUFF                              #
#                                                                             #
###############################################################################

export DOTFILES_HOME="$HOME/dotfiles"

###############################################################################
#  Run once                                                                   #
###############################################################################
_NEW_DOTFILES_GLOBAL_ENV="$0|$@|$-"
if [ ! -z "${DOTFILES_GLOBAL_ENV:-}" ] && [ "$DOTFILES_GLOBAL_ENV" = "$_NEW_DOTFILES_GLOBAL_ENV" ]; then
    return
fi
export DOTFILES_GLOBAL_ENV="$_NEW_DOTFILES_GLOBAL_ENV"

###############################################################################
#  Dotfiles installed programs specific environment                           #
###############################################################################

. "$DOTFILES_HOME/_lib/shell_env/.shell_env_programs_setup"

###############################################################################
#  Shell program specific stuff                                               #
###############################################################################

_shell_specific_file_extension="$_dotfiles_shell_name"
if [ -r ".shell_env_global_setup.${_shell_specific_file_extension}" ]; then
    . ".shell_env_global_setup.${_shell_specific_file_extension}"
fi
