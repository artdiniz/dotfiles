export DOTFILES_HOME="$HOME/dotfiles"



###############################################################################
#                INSTALLED PROGRAMS SPECIFIC ENVIRONMENT                      #
###############################################################################

. ~/dotfiles/dotfiles/.dotfiles_installed_programs_env.sh



###############################################################################
#                       SHELL PROGRAM SPECIFIC STUFF                          #
###############################################################################

_shell_specific_file_extension="$(basename "$0")"
if [ -r ".shell_env_global_setup.${_shell_specific_file_extension}" ]; then
    source ".shell_env_global_setup.${_shell_specific_file_extension}"
fi
